meta {
  name: Finish Race
  type: http
  seq: 3
}

post {
  url: {{baseUrl}}/api/races/{{raceId}}/finish
  body: none
  auth: none
}

docs {
  Marks the race as finished.

  Call this after recording all lap times to finalize the race results.
  After finishing, you can query the winner.

  **Note**: Make sure to set the raceId environment variable from the Start Race response.
}

tests {
  test("Status code is 200", function() {
    expect(res.getStatus()).to.equal(200);
  });

  test("Race status is FINISHED", function() {
    expect(res.getBody().status).to.equal('FINISHED');
  });
}
