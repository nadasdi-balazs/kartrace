meta {
  name: Start Race
  type: http
  seq: 1
}

post {
  url: {{baseUrl}}/api/races/start
  body: json
  auth: none
}

headers {
  Content-Type: application/json
}

body:json {
  {
    "kartNumbers": [1, 2, 3],
    "totalLaps": 3
  }
}

docs {
  Starts a new race with 3 karts and 3 laps.

  After starting, you can record lap completions and check the winner.
}

tests {
  test("Status code is 201", function() {
    expect(res.getStatus()).to.equal(201);
  });

  test("Response contains race info", function() {
    const body = res.getBody();
    expect(body.totalLaps).to.equal(3);
    expect(body.startedAt).to.exist;
    expect(body.finishedAt).to.be.null;
  });
}
